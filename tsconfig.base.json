{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2019",
    "lib": ["esnext", "DOM", "DOM.Iterable"]
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/*.test.ts",
    "**/__tests__",
    "**/templates"
  ]
}
