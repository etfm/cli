
{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "es2019",
      "lib": ["esnext"]
    },
    "exclude": [
      "**/node_modules",
      "**/examples",
      "**/dist",
      "**/*.test.ts",
      "**/__tests__",
      "**/templates",
    ]
  }
  